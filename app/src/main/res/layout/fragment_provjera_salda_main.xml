<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3052FFD9"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:text="Stanje Xice"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:padding="5dp"
        android:background="#52B3D9"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/broj_kartice_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broj kartice: "
            android:layout_weight="3"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:layout_weight="2"
            android:ems="10"
             />
        </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/zapamtime_cb"
            android:text="zapamti me"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/provjeriButton"
            android:textColor="#FFFFFF"
            android:background="#52B3D9"
            android:text="Provjeri"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/prikazIznosa"
            android:text="TEST"
            android:gravity="left"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/zaboraviMe"
            android:textColor="#FFFFFF"
            android:background="#52B3D9"
            android:text="Zaboravi me"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />
        </LinearLayout>



</LinearLayout>
