<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
 <LinearLayout
android:layout_marginTop="3dp"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<ImageView
    android:id="@+id/slika"
    android:padding="10.0sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/human"
    android:maxHeight="85.0sp"
    android:layout_weight="5"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:layout_weight="2"
    android:orientation="vertical">
    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/imePrezime"
        android:paddingTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ime i prezime"/>

    <TextView
        android:id="@+id/trenutniSaldo"
        android:textSize="18sp"
        android:paddingTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trenutni saldo"/>

    <TextView
        android:id="@+id/danasnjiSaldo"
        android:textSize="18sp"
        android:paddingTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danasnji saldo"/>
</LinearLayout>

</LinearLayout>
</LinearLayout>